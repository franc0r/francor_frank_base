{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "colcon build --packages-select francor_frank_base --symlink-install --allow-overriding francor_frank_base && cp build/compile_commands.json ${workspaceFolder}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc",
            "options": {"cwd": "${workspaceFolder}/../../"}
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "colcon build --packages-select francor_frank_base --symlink-install --allow-overriding francor_frank_base --cmake-args -DCMAKE_BUILD_TYPE=RelWithDebInfo && cp build/compile_commands.json ${workspaceFolder}",
            "group": "build",
            "problemMatcher":"$gcc",
            "options": {"cwd": "${workspaceFolder}/../../"}
        },
    ]
}